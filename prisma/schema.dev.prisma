generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  username     String @unique
  name         String
  passwordHash String
}

model Polytechnic {
  id      String    @id
  name    String
  Diploma Diploma[]
}

model Diploma {
  id            String      @id
  name          String
  polytechnic   Polytechnic @relation(fields: [polytechnicId], references: [id])
  polytechnicId String
  APC           APC[]
}

model Faculty {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  Major Major[]
}

model Major {
  id              Int          @id @default(autoincrement())
  name            String
  totalCreditUnit Int
  faculty         Faculty      @relation(fields: [facultyId], references: [id])
  facultyId       Int
  APC             APC[]
  Cohort          Cohort[]
  Curriculum      Curriculum[]
}

model Cohort {
  id         Int
  name       String
  major      Major        @relation(fields: [majorId], references: [id])
  majorId    Int
  Curriculum Curriculum[]

  @@id([id, majorId])
}

model Course {
  code        String        @unique
  name        String
  credit      Int
  APC         APC[]
  TypeMapping TypeMapping[]
  Curriculum  Curriculum[]
}

model APC {
  diploma    Diploma @relation(fields: [diplomaId], references: [id])
  diplomaId  String
  major      Major   @relation(fields: [majorId], references: [id])
  majorId    Int
  course     Course  @relation(fields: [courseCode], references: [code])
  courseCode String

  @@id([diplomaId, majorId, courseCode])
}

model CourseType {
  id          Int           @id @default(autoincrement())
  name        String
  TypeMapping TypeMapping[]
  Curriculum  Curriculum[]
}

model TypeMapping {
  course     Course     @relation(fields: [courseCode], references: [code])
  courseCode String
  type       CourseType @relation(fields: [typeId], references: [id])
  typeId     Int

  @@id([courseCode, typeId])
}

model Curriculum {
  cohort     Cohort     @relation(fields: [cohortId, majorId], references: [id, majorId])
  cohortId   Int
  Major      Major      @relation(fields: [majorId], references: [id])
  majorId    Int
  course     Course     @relation(fields: [courseCode], references: [code])
  courseCode String
  wildcard   Boolean
  type       CourseType @relation(fields: [typeId], references: [id])
  typeId     Int

  @@id([majorId, cohortId, courseCode])
}
